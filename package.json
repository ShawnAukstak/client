{
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist app/ui_compiled",
    "build": "webpack --progress --profile --colors --display-error-details --display-cached",
    "build-prod": "bash -c \"npm run clean; webpack --colors\"",
    "watch": "webpack --watch --progress --profile --colors --display-error-details --display-cached",
    "electron": "electron app",
    "pack": "bash -c \"npm run build-prod; build --dir\"",
    "dist-win": "bash -c \"npm run build-prod; electron-builder --win squirrel --publish always\"",
    "dist-mac": "bash -c \"npm run build-prod; electron-builder --mac --publish always\"",
    "dist-linux": "bash -c \"npm run build-prod; electron-builder --linux --publish always\"",
    "postinstall": "install-app-deps",
    "lint": "tslint --type-check --project tsconfig.json --exclude ./ui/swagger/**/*.ts ./ui/**/*.ts",
    "swagger-codegen": "bash -c \"mkdir -p .tmp && cp ../api/api/_gen/swagger/swagger.json .tmp/swagger.json && MSYS_NO_PATHCONV=1 docker run --rm -v ${PWD}:/local jimschubert/swagger-codegen-cli:2.3.1 generate -i /local/.tmp/swagger.json -l typescript-angular --additional-properties ngVersion=6.1.7 -o /local/ui/swagger/api -DmodelPropertyNaming=original\""
  },
  "build": {
    "appId": "play.your.damn.turn.client",
    "mac": {
      "category": "public.app-category.strategy-games"
    },
    "linux": {
      "category": "StrategyGame"
    },
    "extraFiles": [
      "app/icon.png"
    ]
  },
  "repository": "https://github.com/pydt/client",
  "devDependencies": {
    "@angular/animations": "6.1.8",
    "@angular/common": "6.1.8",
    "@angular/compiler": "6.1.8",
    "@angular/core": "6.1.8",
    "@angular/forms": "6.1.8",
    "@angular/http": "6.1.8",
    "@angular/platform-browser": "6.1.8",
    "@angular/platform-browser-dynamic": "6.1.8",
    "@angular/router": "6.1.8",
    "@types/chokidar": "^1.7.5",
    "@types/countdown": "0.0.6",
    "@types/lodash": "^4.14.116",
    "@types/pako": "^1.0.0",
    "angular2-template-loader": "^0.6.2",
    "aws-iot-device-sdk": "^2.0.1",
    "bootstrap-loader": "3.0.1",
    "bootstrap-sass": "3.3.7",
    "codelyzer": "^4.4.4",
    "core-js": "^2.5.7",
    "countdown": "2.6.0",
    "css-loader": "1.0.0",
    "electron": "^1.7.9",
    "electron-builder": "^19.45.5",
    "electron-builder-lib": "^19.46.3",
    "electron-builder-squirrel-windows": "^19.46.0",
    "electron-contextmenu-middleware": "^1.0.3",
    "electron-input-menu": "^2.1.0",
    "electron-json-storage": "^3.1.0",
    "es6-shim": "^0.35.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^2.0.0",
    "json-loader": "^0.5.7",
    "lodash": "^4.17.11",
    "mkdirp": "0.5.1",
    "ngx-bootstrap": "^3.0.1",
    "node-sass": "^4.9.3",
    "pako": "^1.0.6",
    "pydt-shared": "^1.1.0",
    "raw-loader": "0.5.1",
    "resolve-url-loader": "^3.0.0",
    "rxjs": "^6.3.2",
    "rxjs-compat": "^6.3.2",
    "sass-loader": "^7.1.0",
    "shebang-loader": "0.0.1",
    "style-loader": "^0.23.0",
    "systemjs": "^0.21.4",
    "ts-loader": "^5.1.1",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^3.0.3",
    "typings": "^2.1.1",
    "url-loader": "1.1.1",
    "webpack": "4.19.1",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "3.1.8",
    "zone.js": "^0.8.26"
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "ng2-validation": "^4.2.0",
    "rollbar": "^2.3.9"
  }
}
